<title>Bharti Public School</title>
<style>
    .header-underline h5:before {
        content: '';
        background: #56a0d3;
        width: 57px;
        height: 2px;
        position: absolute;
        bottom: 85px;
        transform: translateX(200%);
    }




    .jumbotron .overlay {
        position: absolute;
        top: 0.75rem;
        width: calc(100% - 1.5rem);
        height: 550px;
        background-color: rgba(0, 0, 0, 0.1);
        background-image: linear-gradient(to top, rgb(0 0 0 / 36%) 0%, rgb(0 0 0 / 23%) 10%, rgb(0 0 0 / 27%) 30%, rgb(0 0 0 / 50%) 70%, rgb(0 0 0 / 50%) 90%, rgb(0 0 0 / 52%) 100%);

    }

    @media screen and (max-width: 768px) {
        .jumbotron .overlay {
            width: 100%;

            top: 0;
        }
    }

    .faculty-overlay-1 {
        position: absolute;
        bottom: 1.5rem;
        background: var(--blue);
        background: var(--blue-transparent);
        /* Black see-through */
        color: #f1f1f1;
        width: 100%;
        opacity: 1;
        transition: .5s ease;
        color: white;
        font-size: 20px;
        padding: 20px;
        text-align: center;
    }

    .f_overlay {
        position: absolute;
        bottom: 0;
        background: var(--blue);
        background: var(--blue-transparent);
        /* Black see-through */
        color: #f1f1f1;
        width: 100%;
        height: 100%;
        transition: .5s ease;
        opacity: 0;
        color: white;
        font-size: 20px;
        padding: 20px;
        text-align: center;
    }

    .faculty-card:hover .faculty-overlay-1 {
        opacity: 0;
    }

    .faculty-card:hover .overlay {
        opacity: 1;
    }

    .faculty-card {
        position: relative;
    }

    .controls {
        position: absolute;
        display: inline;
        top: 0;
        right: 1rem;
    }

    .faculty-tabs a {
        display: block;
        font-size: 1rem;
        line-height: 1.1875;
        font-weight: 900;
        text-transform: uppercase;
        border: 1px solid #E6E6E6;
        padding: 14px 17px;
        -webkit-transition: 0.3s all;
        transition: 0.3s all;
        position: relative;
        background: #F2F2F2;
        color: #252B33;

    }

    .faculty-tabs a.active {
        background: #012E61;
        color: #FFF;
        border-color: #012E61;
    }

    .faculty-tabs a.active:after {
        border-top-color: #012E61;
    }

    .faculty-tabs a:after {
        content: '';
        position: absolute;
        top: 100%;
        left: 50%;

        -webkit-transform: translateX(-50%);
        -ms-transform: translateX(-50%);
        transform: translateX(-50%);
        border-left: 13px solid transparent;
        border-right: 13px solid transparent;
        border-top: 7px solid transparent;
        -webkit-transition: 0.3s border;
        transition: 0.3s border;
    }

    .faculty-tabs a.active {
        background: #012E61;
        color: #FFF;
        border-color: #012E61;
    }
</style>
</head>

