    <script>
        let scrollyArrow = document.getElementById('fold_2');
        function gotoPos() {
            window.scroll({
                behavior: 'smooth',
                left: 0,
                top: scrollyArrow.offsetTop
            });
        }

        $(function () {
            // Initialize form validation on the registration form.
            // It has the name attribute "registration"
            $("form[name='contactForm']").validate({

                // Specify validation rules
                rules: {
                    // The key name on the left side is the name attribute
                    // of an input field. Validation rules are defined
                    // on the right side
                    studentName: "required",
                    city: "required",
                    school:
                    {
                        required: true,
                    },

                    std: {
                        required: true,
                    },

                    phone: "required",
                    message: "required",
                    email: {
                        required: true,
                        // Specify that email should be validated
                        // by the built-in "email" rule
                        email: true
                    },

                },
                // Specify validation error messages
                messages: {
                    studentName: "Please Enter your student Name",
                    phone: "Please Enter your Mobile Number",

                    email: "Please Enter a valid email address"
                },
                // Make sure the form is submitted to the destination defined
                // in the "action" attribute of the form when valid
                submitHandler: function (form) {
                    let data1 = {
                        sName: $('#studentName').val(),
                        city: $('#city').val(),
                        message: $('#message').val(),

                        std: $('#std').find(":selected").val(),
                        email: $('#email').val(),
                        school: $('#school').find(":selected").val(),

                        phone: $('#phone').val(),
                        formType: "contact"

                    }

                    Swal.fire({
                        title: 'Please Wait',
                        allowEscapeKey: false,
                        allowOutsideClick: false,
                        background: '#fff',
                        showConfirmButton: false,
                        onOpen: () => {
                            Swal.showLoading();
                            $.post("/api/contact",
                                data1,
                                function (data, status) {
                                    // alert("Data: " + data.msg + "\nStatus: " + status);
                                    if (data && data.success) {
                                        Swal.fire({
                                            title: data.msg,
                                            icon: 'success',
                                            showConfirmButton: true,

                                        }).then(() => {
                                            $('#resetForm').click();
                                        })
                                    } else {
                                        Swal.fire({
                                            title: 'Error!',
                                            text: data.msg,
                                            icon: 'error',
                                            showConfirmButton: true,
                                        })
                                    }

                                });
                        }
                    })

                    // console.log("form", data1);
                    // form.submit();
                }
            });
        });

    </script>
