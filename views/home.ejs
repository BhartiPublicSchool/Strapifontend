    /* keyframes*/

    @keyframes slideShow {
        0% {
            opacity: 0;
            transform: scale(1);
            -ms-transform: scale(1);
        }

        5% {
            opacity: 1
        }

        25% {
            opacity: 1;
        }

        30% {
            opacity: 0;
            transform: scale(1.1);
            -ms-transform: scale(1.1);
        }

        100% {
            opacity: 0;
            transform: scale(1);
            -ms-transformm: scale(1);
        }
    }

    @-o-keyframes slideShow {
        0% {
            opacity: 0;
            -o-transform: scale(1);
        }

        5% {
            opacity: 1
        }

        25% {
            opacity: 1;
        }

        30% {
            opacity: 0;
