                                <div class="card-overlay"
                                    style="background-image: url('<%= env + handler.mediaSelection(data.fold3[1].img, quality) %>');">
                                    <div class="pop-btn-text">
                                        <section>
                                            <h2><%= handler.safeView(data.fold3, 'title', 1) %> </h2>
                                        </section>
                                        <footer>
