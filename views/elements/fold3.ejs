<div class="_feature_box">
 
    <figure class="_fold_3_overlay"> 
        <!-- <img width="100%" height="100%" src="./3rdFold/Community_2.JPG" alt=""> -->
        <% if (card.card_img && card.card_img.formats.medium) { %>
            <img width="100%" height="100%" src="<%= env + card.card_img.formats.medium.url %>" alt="">
            <% } else if(card.card_img && card.card_img.formats.small) {%>
                <img width="100%" height="100%"  src="<%= env + card.card_img.formats.small.url %>" alt="">
                <% }  else if(Array.isArray(card.card_img) && card.card_img && card.card_img.formats.thumbnail) {%>
                    <img width="100%" height="100%"  src="<%= env + card.card_img.formats.thumbnail.url %>" alt="">
                    <% }  else {%>
    
                    <img width="100%" height="100%"  src="" alt="Image Not Available">
                    <% } %>
     


        <p class="fixp">  <%= card.card_title %></p>
        <figcaption>
            <div>
                <p class="my-2">
                    <%= card.card_text %></p>
                <button type="button"  style="border-radius:0;" href=" <%= card.card_link.link_href %>" class="btn btn-outline-light my-2">  <%= card.card_link.link_title %></button>

            </div>
        </figcaption>
    </figure>

</div>