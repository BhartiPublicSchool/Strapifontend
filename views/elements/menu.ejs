<li>
    <div class="dropdown">
        <a class="dropbtn dropdown-item">
            <%= menu.menu_item %>
        </a>
        <div class="dropdown-content p-5">
            <div class="row">
                <div class="col">

                    <img width="300" src="<%= env + handler.mediaSelection(menu.menu_hover_image, quality) %>" alt=" <%= menu.menu_item %> Menu Image">

                </div>

                <div class="col">


                    <p>
                        <%= menu.menu_hover_description %>

                    </p>

                </div>
                <div class="col">
                    <ul class="list-group list-group-flush">

                        <% menu.Submenu.forEach(function(item, index){ %>

                        <% if(index <= 2){ %>
                        <li class="list-group-item">
                            <a href="<%= item.menu_link %>">
                                <%= item.sub_menu_item %>
                            </a>
                        </li>
                        <% } %>

                        <% }); %>

                    </ul>
                </div>
                <% if(menu.Submenu.length > 3){ %>
                <div class="col">
                    <ul class="list-group list-group-flush">

                        <% menu.Submenu.forEach(function(item, index){ %>

                        <% if(index > 2){ %>
                        <li class="list-group-item">
                            <a href="<%= item.menu_link %>">
                                <%= item.sub_menu_item %>
                            </a>
                        </li>
                        <% } %>

                        <% }); %>

                    </ul>
                </div>
                <% } %>
            </div>



        </div>
    </div>

</li>