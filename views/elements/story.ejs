<div class="history-track">
    <div class="d-flex  flex-column flex-md-row">
        <div class="slide-image">
            <% if (card.timeline_img && card.timeline_img.formats.large) { %>
                <img width="100%" height="100%" src="<%= env + card.timeline_img.formats.large.url %>" alt="">
                <% }  else if (card.timeline_img && card.timeline_img.formats.medium) { %>
                <img width="100%" height="100%" src="<%= env + card.timeline_img.formats.medium.url %>" alt="">
                <% } else if(card.timeline_img && card.timeline_img.formats.small) {%>
                <img width="100%" height="100%" src="<%= env + card.timeline_img.formats.small.url %>" alt="">
                <% }  else if(Array.isArray(card.timeline_img) && card.timeline_img && card.timeline_img.formats.thumbnail) {%>
                <img width="100%" height="100%" src="<%= env + card.timeline_img.formats.thumbnail.url %>" alt="">
                <% }  else {%>
        
                <img width="100%" height="100%" src="" alt="Image Not Available">
                <% } %>
            
            <!-- <img width="100%" height="100%" src="./Richhistory/1.JPG"> -->
        </div>
        <div class="history-content">
            <h5 class="slide-title">  <%= card.timeline_title %>
            </h5>
            <div class="slide-text">
                <%= card.timeline_text %>
            </div>
        </div>
    </div>

</div>